---
// src/layouts/RepublicLayout.astro
// This is a basic layout for your digital republic notes.
// You can customize it with your site's header, footer, styling, etc.
import '../styles/global.css'; // Import the global CSS file directly
const { frontmatter } = Astro.props;
// Ensure frontmatter exists before trying to access its properties
const title = frontmatter?.title || 'Untitled Note';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Respublica Digitalis</title>
    <style scoped> /* Explicitly added 'scoped' attribute */
        /* Local styles for RepublicLayout.astro, overriding global where necessary */

        header {
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 30px;
            text-align: center; /* Centers the navigation links */
        }
        nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        nav a:hover {
            text-decoration: underline;
        }

        /* Heading styles - these will be left-aligned within the main content block */
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Cormorant Garamond', serif; /* Headings use Cormorant Garamond */
            font-weight: 300; /* As per your original CSS for headings */
            text-transform: none;
            letter-spacing: 0.05em;
            text-align: left; /* Ensure headings are left-aligned */
        }
        h1 { font-size: 2.8rem; opacity: 0.65; }
        h2 { font-size: 2.2rem; opacity: 0.5; }
        h3 { font-size: 1.8rem; opacity: 0.5; }

        /* Main content area: centered block, left-aligned text */
        main {
            max-width: 850px;   /* Increased from 800px to 1000px */
            margin: 0 auto;     /* Center the main content area itself on the page */
            padding: 20px;      /* Add padding inside the main content area */
            text-align: left;   /* Make all text content within main left-aligned */
            padding-bottom: 40px; /* Keep existing bottom padding */
        }

        /* Styles for content rendered by Markdown (within the <slot />) */
        /* This targets all direct children of the slot, which are typically Markdown-rendered elements */
        main :global(p), /* Target paragraphs directly rendered from Markdown */
        main :global(ul),
        main :global(ol),
        main :global(blockquote),
        main :global(img)
        {
            /* Apply Sorts Mill Goudy to main content paragraphs */
            font-family: 'Sorts Mill Goudy', serif; /* This will apply to all text elements within the slot */
            font-size: 1.55390625rem;
            line-height: 1.9;
            margin-bottom: 2em; /* Keep em for line-height related spacing */
            max-width: 80ch; /* Increased from 60ch to 80ch for more text on a single line */
            margin-left: auto;   /* Center the block itself if narrower than 60ch */
            margin-right: auto;  /* Center the block itself if narrower than 60ch */
            text-align: left; /* Ensure text within these is also left-aligned */
        }

        /* Specific font size and reduced margin for headings rendered by the slot */
        main :global(h1),
        main :global(h2),
        main :global(h3),
        main :global(h4),
        main :global(h5),
        main :global(h6)
        {
            font-family: 'Cormorant Garamond', serif; /* Ensure headings use Cormorant Garamond */
            font-weight: 300;
            text-transform: none;
            letter-spacing: 0.05em;
            text-align: left;
            margin-top: 1.5em; /* Adjust top margin for spacing above headings */
            margin-bottom: 0.5em; /* Reduced bottom margin for spacing below headings */
            line-height: 1.2; /* Adjust line height for headings */
        }
        main :global(h1) { font-size: 2.8rem; opacity: 0.65; }
        main :global(h2) { font-size: 2.2rem; opacity: 0.5; }
        main :global(h3) { font-size: 1.8rem; opacity: 0.5; }


        footer {
            border-top: 1px solid #eee;
            padding-top: 15px;
            margin-top: 30px;
            text-align: center;
            color: #777;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/republic/">Digital Republic Index</a>
            </nav>
    </header>

    <main>
        <h1>{title}</h1> {/* This H1 is part of the layout, not the slot */}
        <slot /> {/* This is where your individual note's content will be injected */}
    </main>

    <footer>
        <p>&copy; {new Date().getFullYear()} Respublica Digitalis</p>
    </footer>
</body>
</html>
