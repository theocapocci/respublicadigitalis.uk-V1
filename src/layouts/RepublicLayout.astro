---
// src/layouts/RepublicLayout.astro
import '../styles/global.css'; // Your global styles
const { frontmatter } = Astro.props;
const title = frontmatter?.title || 'Untitled Note';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Respublica Digitalis</title>
    <style>
        /*
          Styles for RepublicLayout.astro.
          The header styles below are copied directly from index.astro to ensure an identical look.
        */

        /* Banner styles from index.astro */
        .banner {
            color: #3A3A3A;
            padding: 40px 40px;
            display: flex;
            justify-content: flex-end; /* Pushes the dropdown-link to the far right */
            align-items: center;
            margin-bottom: 0px;
            box-shadow: none;
            position: relative; /* This makes the absolute positioning of the title work correctly */
            border-bottom: 1px solid #E8E5DF; /* Subtle, warm grey divider */
        }
        .banner-title-wrapper {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 1;
        }
        .banner h2 {
            font-family: 'Cormorant SC', serif;
            font-size: 3.0em;
            margin: 0;
            color: #526269; /* Deep blue-grey color for the title */
            line-height: 0.9;
        }
        .banner a.dropdown-link {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            color: #6F8A9B;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease-in-out;
            background: none;
            padding: 0;
            border-radius: 0;
            box-shadow: none;
            transform: none;
            z-index: 2; /* Ensure it's above the title if overlapping */
        }
        .banner a.dropdown-link:hover {
            color: #4A6D7C;
            text-decoration: underline;
        }
        .dropdown-link svg {
            width: 1em;
            height: 1em;
            fill: currentColor;
        }

        /* Layout styles for the note content */
        main {
            max-width: 850px;
            margin: 0 auto;
            padding: 40px 20px 20px; /* Added top padding to give space below header */
        }

        main h1 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        footer {
            max-width: 850px;
            margin: 30px auto 0;
            padding: 15px 20px;
            border-top: 1px solid #E8E5DF; /* Matching the header's border color */
            text-align: center;
            color: #3A3A3A;
        }
    </style>
</head>
<body>
    <header class="banner">
        <div class="banner-title-wrapper">
            <h2>Digital<br />Republic</h2>
        </div>
        <a href="/" class="dropdown-link">
            Home
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-home"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
        </a>
    </header>

    <main>
        <h1>{title}</h1>
        <article class="prose">
            <slot />
        </article>
    </main>

    <footer>
        <p>&copy; {new Date().getFullYear()} Respublica Digitalis</p>
    </footer>
</body>
</html>