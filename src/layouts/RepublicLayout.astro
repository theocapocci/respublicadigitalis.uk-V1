---
// src/layouts/RepublicLayout.astro
// This is a basic layout for your digital republic notes.
// You can customize it with your site's header, footer, styling, etc.
import '../styles/global.css'; // Import the global CSS file directly
const { frontmatter } = Astro.props;
// Ensure frontmatter exists before trying to access its properties
const title = frontmatter?.title || 'Untitled Note';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Respublica Digitalis</title>
    <style>
        /* Local styles for RepublicLayout.astro, overriding global where necessary */
        header {
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 30px;
            text-align: center;
        }
        nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            /* font-family is inherited from body (Cormorant Garamond) */
        }
        nav a:hover {
            text-decoration: underline;
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Cormorant Garamond', serif; /* Headings use Cormorant Garamond */
            font-weight: 300; /* As per your original CSS for headings */
            text-transform: none;
            letter-spacing: 0.05em;
        }
        h1 { font-size: 2.8rem; opacity: 0.65; }
        h2 { font-size: 2.2rem; opacity: 0.5; }
        h3 { font-size: 1.8rem; opacity: 0.5; }
        /* Apply Sorts Mill Goudy to main content paragraphs */
        main p {
            font-family: 'Sorts Mill Goudy', serif;
            font-size: 26px; /* Your desired font size for content */
            line-height: 1.9;
            margin-bottom: 2em;
            max-width: 60ch; /* Limit line length for readability */
        }
        footer {
            border-top: 1px solid #eee;
            padding-top: 15px;
            margin-top: 30px;
            text-align: center;
            color: #777;
            font-size: 0.9em;
            /* font-family is inherited from body (Cormorant Garamond) */
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/republic/">Digital Republic Index</a>
            <!-- Add other navigation links here -->
        </nav>
    </header>

    <main>
        <h1>{title}</h1>
        <slot /> {/* This is where your individual note's content will be injected */}
    </main>

    <footer>
        <p>&copy; {new Date().getFullYear()} Respublica Digitalis</p>
    </footer>
</body>
</html>
