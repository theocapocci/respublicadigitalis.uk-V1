---
// src/layouts/RepublicLayout.astro
// This is a basic layout for your digital republic notes.
// You can customize it with your site's header, footer, styling, etc.
import '../styles/global.css'; // Import the global CSS file directly
const { frontmatter } = Astro.props;
// Ensure frontmatter exists before trying to access its properties
const title = frontmatter?.title || 'Untitled Note';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Respublica Digitalis</title>
    <style scoped> /* Explicitly added 'scoped' attribute */
        /* Local styles for RepublicLayout.astro, overriding global where necessary */

        header {
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 30px;
            text-align: center; /* Centers the navigation links */
        }
        nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        nav a:hover {
            text-decoration: underline;
        }

        /* Heading styles - these will be left-aligned within the main content block */
        /* New, specific style for the LAYOUT'S main title */
        h1 {
            font-family: 'Cormorant SC', serif;
            font-size: 4rem;      /* Larger font size */
            text-align: left;   /* Center the title */
            opacity: 1;           /* Make it fully opaque */
            font-weight: 700;     /* Make it bolder */
            margin-bottom: 2rem;  /* Add some space below it */
            letter-spacing: 0.05em;
            text-transform: none;
        }

        /* Styles for any OTHER headings that might be in the layout (h2, h3, etc.) */
        h2, h3, h4, h5, h6 {
            font-family: 'Cormorant Garamond', serif;
            font-weight: 300;
            text-transform: none;
            letter-spacing: 0.05em;
            text-align: left;
        }
        h2 { font-size: 2.2rem; opacity: 0.5; }
        h3 { font-size: 1.8rem; opacity: 0.5; }

        /* Main content area: centered block, left-aligned text */
        main {
            max-width: 850px;   /* Increased from 800px to 1000px */
            margin: 0 auto;     /* Center the main content area itself on the page */
            padding: 20px;      /* Add padding inside the main content area */
            text-align: left;   /* Make all text content within main left-aligned */
            padding-bottom: 40px; /* Keep existing bottom padding */
        }

        footer {
            border-top: 1px solid #eee;
            padding-top: 15px;
            margin-top: 30px;
            text-align: center;
            color: #777;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/republic/">Digital Republic Index</a>
            </nav>
    </header>

    <main>
        <h1>{title}</h1>
        <article class="prose">
            <slot />
        </article>
        </main>
    <footer>
        <p>&copy; {new Date().getFullYear()} Respublica Digitalis</p>
    </footer>
</body>
</html>
