---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout frontmatter={{ title: 'Respublica Digitalis - Home' }}>
  <div class="homepage-content-container">
    <section class="homepage-content">
      <p>The point of this site is to provide a space for me to make my learning public.</p>
      <p>It is a riff on the idea of a <a href="https://maggieappleton.com/garden-history">digital garden.</a></p>
      <div style="height: var(--space-2xl)"></div>
      <ul>
        <li><a href="/republic/test-note" class="text-blue-600 hover:underline">Note!</a></li>
        <li><a href="/notes/example-note-2" class="text-blue-600 hover:underline">Example Note 2 Title</a></li>
      </ul>
    </section>
  </div>
</BaseLayout>

<style>
  /* Local styles UNIQUE to index.astro */
  .homepage-content-container {
    max-width: 1200px; /* */
    margin: 0 auto; /* */
    padding: 20px; /* */
  }

  /* Homepage content styles */
  .homepage-content {
    padding: 20px 0; /* */
    text-align: left; /* */
    max-width: 1100px; /* */
    margin: 0 auto; /* */
  }
  .homepage-content h1 {
    font-family: 'Cormorant Garamond', serif; /* */
    font-weight: 300; /* */
    font-size: 3.2em; /* */
    color: #3A3A3A; /* */
    margin-bottom: 20px; /* */
  }
  .homepage-content p {
    font-family: 'Sorts Mill Goudy', serif; /* */
    font-size: 1.3em; /* */
    line-height: 1.8; /* */
    margin: 0 auto 30px auto; /* */
  }
  .homepage-content ul {
    list-style: none; /* */
    padding: 0; /* */
  }
  .homepage-content ul li a {
    font-size: 1.3em; /* */
    color: #6F8A9B; /* */
  }
</style>