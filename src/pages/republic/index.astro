---
// src/pages/republic/index.astro
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allNotes = await getCollection('notes');
const publishedNotes = allNotes.filter(note => note.data['dr-publish'] === true);
---
<BaseLayout frontmatter={{ title: 'The Republic | Respublica Digitalis' }}>
  <div class="content-container">
    <section class="content">
    <p>Here are some of my recent notes.</p>
    </section> 
    <div class="gallery-grid">
      {publishedNotes.map(note => (
        <a href={`/republic/${note.slug}`} class="gallery-item">
          <div class="card">
            <h3 class="card-title">{note.data.title}</h3>
            <p class="card-excerpt">{note.data.desc}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  /* --- PAGE-SPECIFIC LAYOUT AND CONTENT STYLES --- */
  /* FIXED: Corrected selector from .maincontent-container */
  .main-content-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .base-content {
    padding: 20px 0;
    text-align: left;
    max-width: 1100px; /* This will constrain the intro text */
    margin: 0 auto;
  }
 
  .base-content p {
    font-family: 'Sorts Mill Goudy', serif;
    font-size: 1.3em;
    line-height: 1.8;
    /* FIXED: Consolidated the margin property */
    margin: 20px 0 30px 0;
  }


  /* --- GALLERY STYLES --- */
  .gallery-grid {
    max-width: 1100px; /* Matched to base-content for alignment */
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 0 auto;
  }
  .gallery-item {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.08);
  }
  .card {
    background-color: #ffffff;
    border: 1px solid #E8E5DF;
    border-radius: 4px;
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .card-title {
    font-family: 'Cormorant SC', serif;
    font-size: 1.7rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: #3A3A3A;
  }
  .card-excerpt {
    font-family: 'Sorts Mill Goudy', serif;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #555;
    margin: 0;
  }
</style>